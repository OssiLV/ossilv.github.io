---
import MainLayout from "@layouts/MainLayout.astro"
import AboutMe from "@assets/images/about_me.jpg"
import ArrowDown from "@assets/icons/arrow_down.svg"
import DownloadIcon from "@assets/icons/download.svg"
import LiveIcon from "@assets/icons/live.svg"
import AWSIcon from "@assets/icons/aws.svg"
---

<MainLayout title="Home | OssiLV">
	<div class=" ">
		<!--HERO-->
		<section id="hero" class="h-screen flex items-center justify-center px-8 md:px-16 text-white">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center max-w-7xl w-full">

				<div class="text-center md:text-left">
					<h1 class="text-4xl md:text-5xl font-bold mb-4 text-cyan-300">Hi, I'm Truong Vo ðŸ‘‹</h1>

					<!-- Typing Effect -->
					<div class="mb-6">
						<img
							src="https://readme-typing-svg.herokuapp.com/?lines=DevOps+and+Web+Developer;Currently+into+DevOps,+backend+dev!&center=false&width=500&height=50&font=Fira+Code&color=ffffff&vCenter=true&pause=1000"
							alt="Typing introduction"
							class="mx-auto md:mx-0"
						/>
					</div>

					<!-- Scroll Button -->
					<a href="#about"
					   title="Go to About section"
					   class="inline-flex items-center gap-2 px-6 py-3 border border-white text-white rounded-md hover:bg-white hover:text-black transition duration-300">
						Scroll Down
						<ArrowDown />
					</a>
				</div>
			</div>
		</section>

		<!--ABOUT-->
		<section id="about" class="min-h-screen flex items-center justify-center px-6 py-20 bg-black/80 scroll-mt-24">
			<div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center">

				<!-- LEFT: TEXT -->
				<div class="text-center md:text-left">
					<h2 class="text-3xl md:text-4xl font-bold mb-6">About Me</h2>
					<p class="text-lg text-gray-300 mb-6">
						I'm <span class="text-cyan-300 font-semibold">Truong Vo</span>, a passionate DevOps engineer & developer who loves building efficient, scalable, and automated systems.
						With a background in Linux, Docker, CI/CD, and cloud platforms, I turn ideas into robust infrastructures.
						<br/>
						<br/>
						I enjoy learning modern technologies and solving real-world problems through code.
					</p>

					<!-- Resume Button -->
					<a href="/VoHoangAnhTruong_DevOps_CV.pdf"
					   download
					   title="Download resume"
					   class="inline-flex items-center gap-2 px-6 py-2 border border-white text-white rounded hover:bg-white hover:text-black transition duration-300">
						Resume
						<DownloadIcon />
					</a>
				</div>

				<!-- RIGHT: IMAGE -->
				<div class="flex justify-center">
					<img src={AboutMe.src} alt="About Me" class="max-w-sm rounded-lg shadow-lg" />
				</div>
			</div>
		</section>

		<!-- PROJECTS -->
		<section id="projects" class="min-h-screen scroll-mt-24 bg-black/70 py-16 px-6 text-center">
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-white">Projects</h2>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 max-w-6xl mx-auto text-left">
				<!-- Project Card -->
				<div class="bg-white/5 border border-white/10 rounded-xl overflow-hidden shadow-lg hover:border-cyan-300 transition-all">
					<!-- Image -->
					<img src="" alt="" class="w-full h-48 object-cover" />

					<!-- Content -->
					<div class="p-6 flex flex-col h-full">
						<!-- Title -->
						<h3 class="text-xl font-semibold text-cyan-300 mb-3">CI/CD Pipeline with Jenkins</h3>

						<!-- Description -->
						<p class="text-gray-300 text-sm mb-4">
							A complete CI/CD pipeline using Jenkins, Docker, and GitHub to automate build, test, and deploy for a Node.js application.
						</p>

						<!-- Tech Stack -->
						<div class="flex flex-wrap gap-2 mb-6 text-sm">
							<span class="px-2 py-1 bg-cyan-800/30 text-cyan-200 rounded">Jenkins</span>
							<span class="px-2 py-1 bg-cyan-800/30 text-cyan-200 rounded">Docker</span>
							<span class="px-2 py-1 bg-cyan-800/30 text-cyan-200 rounded">GitHub</span>
							<span class="px-2 py-1 bg-cyan-800/30 text-cyan-200 rounded">Node.js</span>
						</div>

						<!-- Buttons -->
						<div class="mt-2 flex gap-4">
							<!-- Live Demo -->
							<a href="https://project-live-link.com"
							   target="_blank"
							   title="Go to Live Demo"
							   class="flex items-center gap-2 px-4 py-2 border border-cyan-300 text-sm text-cyan-300 rounded hover:bg-cyan-300 hover:text-black transition">
								<LiveIcon />
								Live Demo
							</a>

							<!-- GitHub Repo -->
							<a href="https://github.com/OssiLV/project-jenkins"
							   target="_blank"
							   title="Go to GitHub repo"
							   class="flex items-center gap-2 px-4 py-2 border border-white text-sm text-white rounded hover:bg-white hover:text-black transition">
								<img src="https://cdn.simpleicons.org/github/FFFFFF" class="w-5 h-5" alt="GitHub">
								GitHub Repo
							</a>
						</div>
					</div>
				</div>


			</div>
		</section>

		<!--SKILLS-->
		<section id="skills" class="min-h-screen flex flex-col items-center justify-center py-16 px-6 text-center bg-black/70">
			<h2 class="text-3xl md:text-4xl font-bold mb-10 text-white">Skills</h2>

			<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6 max-w-5xl w-full">
				<!-- Linux -->
				<div class="bg-white/5 border border-white/10 text-white py-4 px-3 rounded-lg shadow flex flex-col items-center hover:border-cyan-300 transition">
					<img src="https://cdn.simpleicons.org/linux/FFFFFF" class="w-8 h-8 mb-2" alt="Linux">
					<span>Linux / Bash</span>
				</div>
				<!-- Docker -->
				<div class="bg-white/5 border border-white/10 text-white py-4 px-3 rounded-lg shadow flex flex-col items-center hover:border-cyan-300 transition">
					<img src="https://cdn.simpleicons.org/docker/FFFFFF" class="w-8 h-8 mb-2" alt="Docker">
					<span>Docker & Compose</span>
				</div>
				<!-- Jenkins -->
				<div class="bg-white/5 border border-white/10 text-white py-4 px-3 rounded-lg shadow flex flex-col items-center hover:border-cyan-300 transition">
					<img src="https://cdn.simpleicons.org/jenkins/FFFFFF" class="w-8 h-8 mb-2" alt="Jenkins">
					<span>Jenkins</span>
				</div>
				<!-- Git & GitHub -->
				<div class="bg-white/5 border border-white/10 text-white py-4 px-3 rounded-lg shadow flex flex-col items-center hover:border-cyan-300 transition">
					<img src="https://cdn.simpleicons.org/github/FFFFFF" class="w-8 h-8 mb-2" alt="GitHub">
					<span>Git & GitHub</span>
				</div>
				<!-- Terraform -->
				<div class="bg-white/5 border border-white/10 text-white py-4 px-3 rounded-lg shadow flex flex-col items-center hover:border-cyan-300 transition">
					<img src="https://cdn.simpleicons.org/terraform/FFFFFF" class="w-8 h-8 mb-2" alt="Terraform">
					<span>Terraform</span>
				</div>
				<!-- AWS -->
				<div class="bg-white/5 border border-white/10 text-white py-4 px-3 rounded-lg shadow flex flex-col items-center hover:border-cyan-300 transition">
					<AWSIcon />
					<span>AWS (EC2, S3, VPC)</span>
				</div>
				<!-- Kubernetes -->
				<div class="bg-white/5 border border-white/10 text-white py-4 px-3 rounded-lg shadow flex flex-col items-center hover:border-cyan-300 transition">
					<img src="https://cdn.simpleicons.org/kubernetes/FFFFFF" class="w-8 h-8 mb-2" alt="Kubernetes">
					<span>Kubernetes</span>
				</div>
				<!-- CI/CD Pipelines (vÃ­ dá»¥ GitLab) -->
				<div class="bg-white/5 border border-white/10 text-white py-4 px-3 rounded-lg shadow flex flex-col items-center hover:border-cyan-300 transition">
					<img src="https://cdn.simpleicons.org/ansible/FFFFFF" class="w-8 h-8 mb-2" alt="Ansible">
					<span>Ansible</span>
				</div>
			</div>
		</section>

		<!--CONTACT-->
		<section id="contact" class="min-h-screen flex flex-col items-center justify-center py-12 px-6 text-center bg-black/70">
			<h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">Contact</h2>
			<p class="text-lg text-gray-300 mb-4 max-w-xl">
				Want to collaborate or have any questions? Feel free to reach out to me!
			</p>
			<a href="mailto:vohoanganhtruong@gmail.com"
			   title="Mail me"
			   class="text-cyan-300 hover:underline text-lg flex flex-col items-center">
				vohoanganhtruong@gmail.com
				<img src="https://cdn.simpleicons.org/gmail/FFFFFF" class="w-8 h-8 mb-2" alt="Gmail">
			</a>

			<div class="flex space-x-6 mt-6">
				<a href="https://github.com/Ossilv"
				   target="_blank"
				   title="My Github profile"
				   class="text-gray-300 hover:text-cyan-300 transition flex flex-col items-center">
					GitHub
				</a>
				<a href="https://linkedin.com/in/ossilv"
				   target="_blank"
				   title="My LinkedIn profile"
				   class="text-gray-300 hover:text-cyan-300 transition">
					LinkedIn
				</a>
			</div>
		</section>
	</div>
</MainLayout>