---
const audioFile = '/music_background.mp3';
---

<div id="music-toggle" class="fixed bottom-8 right-8 z-50">
    <button
        class="bg-white/10 border border-white/20 p-3 rounded-full hover:bg-white/20 transition"
        onclick="toggleMusic()"
        title="Toggle Music"
    >
        <span id="music-icon" class="text-white text-xl">ðŸ”‡</span>
    </button>

    <audio id="bg-music" src={audioFile} loop></audio>

    <script is:inline>
        const audio = document.getElementById('bg-music');
        const icon = document.getElementById('music-icon');

        function toggleMusic() {
            if (audio.paused) {
                audio.play();
                icon.textContent = 'ðŸ”Š';
            } else {
                audio.pause();
                icon.textContent = 'ðŸ”‡';
            }
        }
    </script>
</div>
