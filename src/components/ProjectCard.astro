---
interface Props {
    project: {
        title: string;
        description: string;
        image: string;
        techs: { name: string; icon: string }[];
        liveLink: string;
        repoLink: string;
    };
}

const { project } = Astro.props;
import LiveIcon from '@assets/icons/live.svg';
---

<div
    class="bg-white/5 border border-white/10 rounded-xl overflow-hidden shadow-lg hover:border-cyan-300 transition-all flex flex-col"
>
    <!-- Image -->
    <img src={project.image} alt={project.title} class="w-full h-48 object-cover" />

    <!-- Content -->
    <div class="p-6 flex flex-col flex-grow">
        <!-- Title -->
        <h3 class="text-xl font-semibold text-cyan-300 mb-3">
            {project.title}
        </h3>

        <!-- Description -->
        <p class="text-gray-300 text-sm mb-4">{project.description}</p>

        <!-- Tech Stack -->
        <div class="flex flex-wrap gap-3 mb-6 text-sm">
            {
                project.techs.map((tech) => (
                    <span class="flex items-center gap-2 px-3 py-1 bg-cyan-800/30 text-cyan-200 rounded">
                        <i class={`${tech.icon} text-lg`} />
                        {tech.name}
                    </span>
                ))
            }
        </div>

        <!-- Buttons -->
        <div class="mt-auto flex gap-4">
            <!-- Live Demo -->
            {
                project.liveLink && (
                    <a
                        href={project.liveLink}
                        target="_blank"
                        class="flex items-center gap-2 px-4 py-2 border border-cyan-300 text-sm text-cyan-300 rounded hover:bg-cyan-300 hover:text-black transition"
                    >
                        <LiveIcon class="w-4 h-4" />
                        Live Demo
                    </a>
                )
            }

            <!-- GitHub Repo -->
            {
                project.repoLink && (
                    <a
                        href={project.repoLink}
                        target="_blank"
                        class="flex items-center gap-2 px-4 py-2 border border-white text-sm text-white rounded hover:bg-white hover:text-black transition"
                    >
                        <i class="devicon-github-original text-lg" />
                        GitHub Repo
                    </a>
                )
            }
        </div>
    </div>
</div>
